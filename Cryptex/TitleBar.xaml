<UserControl x:Class="Cryptex.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cryptex"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="650" MouseDown="UserControl_MouseDown">

    <Grid Background="#FF222629">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550px"/>
            <ColumnDefinition Width="50px"/>
            <ColumnDefinition Width="50px"/>
        </Grid.ColumnDefinitions>

        <!-- Control Features -->
        <Button x:Name = "CloseBtn" Grid.Column="2" Background="#FF222629" BorderThickness="0" Width="33.3px" Content="X" Foreground="#FF86C232" Click="CloseBtn_Click" FontFamily="Candara Light"></Button>
        <Button x:Name = "MinimiseBtn" Grid.Column="1" Background="#FF222629" BorderThickness="0" Width="33.3px" Content="---" Foreground="#FF86C232" FontFamily="Candara Light" Click="MinimiseBtn_Click"></Button>
        <Label  x:Name = "TitleLbl" VerticalContentAlignment="Center" Grid.Column="0" Foreground="#FF86C232" Content="Cryptex" FontFamily="Global User Interface" Margin="15 0 0 0"/>
    </Grid>
</UserControl>
